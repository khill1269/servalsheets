{
  "name": "servalsheets",
  "version": "1.4.0",
  "description": "Production-grade Google Sheets MCP server - 17 tools, 226 actions - AI-powered analysis, transactions, workflows, safety rails, and enterprise features",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "servalsheets": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./http-server": {
      "types": "./dist/http-server.d.ts",
      "import": "./dist/http-server.js"
    },
    "./oauth-provider": {
      "types": "./dist/oauth-provider.d.ts",
      "import": "./dist/oauth-provider.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./package.json": "./package.json"
  },
  "mcpName": "khill1269/servalsheets",
  "packageManager": "npm@10.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/khill1269/servalsheets"
  },
  "homepage": "https://github.com/khill1269/servalsheets#readme",
  "bugs": {
    "url": "https://github.com/khill1269/servalsheets/issues"
  },
  "scripts": {
    "gen:metadata": "tsx scripts/generate-metadata.ts",
    "check:drift": "bash scripts/check-metadata-drift.sh",
    "check:placeholders": "bash scripts/no-placeholders.sh",
    "check:silent-fallbacks": "bash scripts/check-silent-fallbacks.sh",
    "check:debug-prints": "bash scripts/check-debug-prints.sh",
    "check:commit-size": "bash scripts/check-commit-size.sh",
    "build": "npm run gen:metadata && tsc -p tsconfig.build.json && npm run build:copy-assets",
    "build:copy-assets": "cp -r src/knowledge dist/",
    "build:clean": "npm run clean && npm run build",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "start:http": "node dist/http-server.js",
    "start:http:prod": "NODE_ENV=production node dist/http-server.js",
    "start:remote": "node dist/remote-server.js",
    "auth": "node dist/cli/auth-setup.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit tests/schemas tests/utils tests/core",
    "test:handlers": "vitest run tests/handlers --exclude='**/*.snapshot.test.ts'",
    "test:integration": "vitest run tests/integration tests/contracts tests/server",
    "test:services": "vitest run tests/services tests/storage tests/mcp tests/startup",
    "test:safety": "vitest run tests/property tests/safety tests/security",
    "test:snapshots": "vitest run tests/snapshots tests/handlers/**/*.snapshot.test.ts",
    "test:benchmarks": "vitest run tests/benchmarks",
    "benchmarks:track": "vitest run tests/benchmarks && node scripts/track-benchmarks.mjs",
    "benchmarks:run": "RUN_BENCHMARKS=true vitest run tests/benchmarks && node scripts/track-benchmarks.mjs",
    "test:fast": "npm run test:unit && npm run test:handlers",
    "test:all": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "coverage:report": "vitest run --coverage --reporter=json-summary && node scripts/generate-coverage-badge.mjs",
    "test:shard": "vitest run --shard",
    "test:integration:real": "TEST_REAL_API=true vitest tests/integration/",
    "test:snapshots:update": "bash scripts/update-snapshots.sh",
    "metrics": "tsx scripts/show-metrics.ts",
    "show:tools": "tsx scripts/show-tools-list-schemas.ts",
    "lint": "eslint src --ext .ts --cache --cache-location .eslintcache",
    "lint:fix": "eslint src --ext .ts --fix --cache --cache-location .eslintcache",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit --watch",
    "dead-code": "ts-prune --ignore 'src/(index|cli|server|http-server|remote-server).ts|.*.test.ts' --error",
    "dead-code:report": "ts-prune --ignore 'src/(index|cli|server|http-server|remote-server).ts|.*.test.ts'",
    "verify": "turbo run verify",
    "verify:legacy": "npm-run-all --parallel check:drift check:placeholders typecheck lint format:check && npm test",
    "check": "npm run verify",
    "ci": "npm run clean && turbo run build verify && npm run validate:server-json && npm run smoke",
    "ci:legacy": "npm run clean && npm run build && npm run verify:legacy && npm run validate:server-json && npm run smoke",
    "security:audit": "npm audit --audit-level=high",
    "validate:server-json": "node scripts/validate-server-json.mjs",
    "smoke": "bash scripts/smoke-test.sh",
    "smoke:quick": "node dist/cli.js --version",
    "verify:build": "npm run build && npm run validate:server-json && npm run smoke && echo 'Build OK'",
    "clean": "rm -rf dist .tsbuildinfo .tsbuildinfo.build",
    "prepack": "npm run gen:metadata && npm run build && npm run validate:server-json",
    "prepare": "husky",
    "docker:build": "docker build -f deployment/docker/Dockerfile -t servalsheets .",
    "docker:run": "docker run -p 3000:3000 --env-file .env servalsheets",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "export-openapi": "tsx scripts/export-openapi.ts",
    "export-openapi:yaml": "tsx scripts/export-openapi.ts --format=yaml --output=docs/openapi.yaml",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect:cli": "npx @modelcontextprotocol/inspector node dist/cli.js --stdio",
    "schema:fetch": "tsx src/cli/schema-manager.ts fetch",
    "schema:compare": "tsx src/cli/schema-manager.ts compare",
    "schema:versions": "tsx src/cli/schema-manager.ts versions",
    "schema:clear-cache": "tsx src/cli/schema-manager.ts clear-cache",
    "schema:migration-report": "tsx src/cli/schema-manager.ts migration-report",
    "watch:all": "bash scripts/watch-all.sh"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "anthropic-mcp",
    "claude",
    "claude-desktop",
    "google-sheets",
    "gsheets",
    "google-workspace",
    "spreadsheet",
    "anthropic",
    "ai-tools",
    "oauth",
    "oauth2",
    "connector",
    "enterprise",
    "production-ready"
  ],
  "author": {
    "name": "Thomas Lee Cahill",
    "url": "https://github.com/khill1269"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "googleapis": "^170.0.0",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "lru-cache": "^11.0.0",
    "open": "^11.0.0",
    "p-queue": "^9.0.1",
    "prom-client": "^15.1.3",
    "uuid": "^13.0.0",
    "winston": "^3.17.0",
    "zod": "4.3.5"
  },
  "optionalDependencies": {
    "redis": "^5.10.0"
  },
  "devDependencies": {
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vitest/coverage-v8": "^4.0.16",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.17.0",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.0",
    "supertest": "^7.1.4",
    "ts-prune": "^0.10.3",
    "tsx": "^4.19.0",
    "turbo": "^2.7.4",
    "type-coverage": "^2.29.7",
    "typedoc": "^0.28.15",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yaml": "^2.8.2",
    "zod-to-json-schema": "^3.25.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "examples",
    "docs/guides",
    "server.json",
    "README.md",
    "LICENSE",
    "SECURITY.md",
    "CHANGELOG.md",
    "SKILL.md"
  ]
}
