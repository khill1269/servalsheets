{
  "name": "servalsheets",
  "version": "1.6.0",
  "description": "Production-grade Google Sheets MCP server - 22 tools, 298 actions - AI-powered analysis, transactions, workflows, safety rails, and enterprise features",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "servalsheets": "./dist/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./http-server": {
      "types": "./dist/http-server.d.ts",
      "import": "./dist/http-server.js"
    },
    "./oauth-provider": {
      "types": "./dist/oauth-provider.d.ts",
      "import": "./dist/oauth-provider.js"
    },
    "./schemas": {
      "types": "./dist/schemas/index.d.ts",
      "import": "./dist/schemas/index.js"
    },
    "./package.json": "./package.json"
  },
  "mcpName": "io.github.khill1269/servalsheets",
  "packageManager": "npm@10.9.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/khill1269/servalsheets"
  },
  "homepage": "https://github.com/khill1269/servalsheets#readme",
  "bugs": {
    "url": "https://github.com/khill1269/servalsheets/issues"
  },
  "scripts": {
    "gen:metadata": "tsx scripts/generate-metadata.ts",
    "token:budget": "tsx scripts/token-budget.ts",
    "check:drift": "bash scripts/check-metadata-drift.sh",
    "schema:commit": "npm run gen:metadata && npm run check:drift && npm run typecheck && npm run test:fast && echo 'âœ“ Schema changes ready to commit' && git add src/schemas/index.ts src/schemas/annotations.ts src/mcp/completions.ts server.json package.json",
    "check:metadata-strict": "tsx scripts/check-metadata-strict.ts",
    "check:placeholders": "bash scripts/no-placeholders.sh",
    "check:silent-fallbacks": "bash scripts/check-silent-fallbacks.sh",
    "check:debug-prints": "bash scripts/check-debug-prints.sh",
    "check:commit-size": "bash scripts/check-commit-size.sh",
    "check:doc-action-counts": "bash scripts/check-doc-action-counts.sh",
    "fix:doc-action-counts": "bash scripts/fix-doc-action-counts.sh",
    "validate:compliance": "tsx scripts/validate-api-mcp-compliance.ts",
    "validate:actions": "tsx scripts/validate-action-counts.ts",
    "check:architecture": "depcruise --config .dependency-cruiser.cjs --output-type err src/",
    "check:architecture:graph": "depcruise --config .dependency-cruiser.cjs --output-type dot src/ | dot -T svg > architecture-graph.svg",
    "check:dead-code": "knip --production",
    "validate:all": "npm run check:drift && npm run validate:actions && npm run check:architecture && npm run lint",
    "build": "npm run gen:metadata && tsc -p tsconfig.build.json && npm run build:copy-assets",
    "build:prod": "npm run gen:metadata && tsc -p tsconfig.production.json && npm run build:copy-assets",
    "build:copy-assets": "cp -r src/knowledge dist/ && cp src/cli/*.html dist/cli/",
    "build:clean": "npm run clean && npm run build",
    "dev": "tsx watch src/cli.ts",
    "prestart": "[ -f dist/cli.js ] || npm run build",
    "start": "node dist/cli.js",
    "start:http": "node dist/http-server.js",
    "start:http:prod": "NODE_ENV=production node dist/http-server.js",
    "start:remote": "node dist/remote-server.js",
    "auth": "node dist/cli/auth-setup.js",
    "test": "vitest",
    "test:unit": "vitest run tests/unit tests/schemas tests/utils tests/core",
    "test:handlers": "vitest run tests/handlers --exclude='**/*.snapshot.test.ts'",
    "test:integration": "vitest run tests/integration tests/contracts tests/server",
    "test:services": "vitest run tests/services tests/storage tests/mcp tests/startup",
    "test:safety": "vitest run tests/property tests/safety tests/security",
    "test:snapshots": "vitest run tests/snapshots tests/handlers/**/*.snapshot.test.ts",
    "test:benchmarks": "vitest run tests/benchmarks",
    "test:live": "TEST_REAL_API=true vitest run tests/live-api",
    "test:live:fast": "TEST_REAL_API=true vitest run tests/live-api/tools",
    "test:compliance": "vitest run tests/compliance",
    "bench": "RUN_BENCHMARKS=true vitest run tests/benchmarks",
    "bench:live": "TEST_REAL_API=true RUN_BENCHMARKS=true vitest run tests/benchmarks/live-api",
    "bench:tool-level": "TEST_REAL_API=true RUN_BENCHMARKS=true vitest run tests/benchmarks/live-api/tool-level.bench.ts",
    "bench:action-level": "TEST_REAL_API=true RUN_BENCHMARKS=true vitest run tests/benchmarks/live-api/action-level.bench.ts",
    "bench:optimizations": "TEST_REAL_API=true vitest run tests/live-api/optimizations",
    "bench:full": "TEST_REAL_API=true RUN_BENCHMARKS=true vitest run tests/benchmarks/live-api tests/live-api/optimizations",
    "bench:phase2": "npx tsx scripts/benchmarks/benchmark-optimizations.ts",
    "benchmarks:track": "vitest run tests/benchmarks && node scripts/track-benchmarks.mjs",
    "benchmarks:run": "RUN_BENCHMARKS=true vitest run tests/benchmarks && node scripts/track-benchmarks.mjs",
    "test:fast": "vitest run tests/unit tests/schemas tests/utils tests/core tests/handlers --exclude='**/*.snapshot.test.ts' --exclude='**/analyze.test.ts' --pool=threads",
    "test:llm": "vitest run tests/handlers/analyze.test.ts",
    "test:all": "vitest run",
    "test:load": "vitest run tests/load --config tests/config/vitest.config.load.ts",
    "test:load:script": "bash scripts/run-load-tests.sh",
    "test:chaos": "vitest run tests/chaos --config tests/config/vitest.config.chaos.ts",
    "test:chaos:script": "bash scripts/run-chaos-tests.sh",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "coverage:report": "vitest run --coverage --reporter=json-summary && node scripts/generate-coverage-badge.mjs",
    "test:shard": "vitest run --shard",
    "test:integration:real": "TEST_REAL_API=true vitest tests/integration/",
    "test:snapshots:update": "bash scripts/update-snapshots.sh",
    "test:health": "tsx scripts/test-health-monitoring.ts",
    "monitor:start": "bash scripts/start-monitoring.sh",
    "monitor:live": "tsx scripts/live-monitor.ts",
    "monitor:errors": "tsx scripts/live-monitor.ts --errors",
    "monitor:stats": "tsx scripts/live-monitor.ts --stats",
    "metrics": "tsx scripts/show-metrics.ts",
    "show:tools": "tsx scripts/show-tools-list-schemas.ts",
    "lint": "NODE_OPTIONS='--max-old-space-size=4096' eslint src --ext .ts --cache --cache-location .eslintcache",
    "lint:fix": "NODE_OPTIONS='--max-old-space-size=4096' eslint src --ext .ts --fix --cache --cache-location .eslintcache",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "typecheck:watch": "tsc -p tsconfig.json --noEmit --watch",
    "dead-code": "ts-prune --ignore 'src/(index|cli|server|http-server|remote-server).ts|.*.test.ts' --error",
    "dead-code:report": "ts-prune --ignore 'src/(index|cli|server|http-server|remote-server).ts|.*.test.ts'",
    "verify": "npm-run-all --parallel check:drift check:placeholders check:doc-action-counts typecheck lint format:check && npm run test:fast",
    "verify:legacy": "npm-run-all --parallel check:drift check:placeholders typecheck lint format:check && npm test",
    "check": "npm run verify",
    "ci": "npm run clean && turbo run build verify && npm run validate:server-json && npm run smoke",
    "ci:legacy": "npm run clean && npm run build && npm run verify:legacy && npm run validate:server-json && npm run smoke",
    "security:audit": "npm audit --audit-level=high",
    "validate:server-json": "node scripts/validate-server-json.mjs",
    "validate:server-json-extended": "tsx scripts/validate-server-json-extended.ts",
    "smoke": "bash scripts/smoke-test.sh",
    "smoke:quick": "node dist/cli.js --version",
    "verify:build": "npm run build && npm run validate:server-json && npm run smoke && echo 'Build OK'",
    "clean": "rm -rf dist .tsbuildinfo .tsbuildinfo.build",
    "prepack": "npm run gen:metadata && npm run build && npm run validate:server-json",
    "postinstall": "[ -f dist/cli.js ] || npm run build || echo 'âš ï¸  Build failed - run: npm run build'",
    "prepare": "husky || true",
    "build:bundle": "bash scripts/build-bundle.sh",
    "docker:build": "docker build -f deployment/docker/Dockerfile -t servalsheets .",
    "docker:run": "docker run -p 3000:3000 --env-file .env servalsheets",
    "docs": "typedoc",
    "docs:watch": "typedoc --watch",
    "docs:site": "npx vitepress build docs",
    "docs:site:dev": "npx vitepress dev docs",
    "docs:site:preview": "npx vitepress preview docs",
    "docs:validate": "npm run docs:lint && npm run docs:check-links",
    "docs:lint": "markdownlint-cli2 'docs/**/*.md' '#docs/archive/**' '#docs/generated/**' '#docs/.vitepress/**'",
    "docs:lint:fix": "markdownlint-cli2 --fix 'docs/**/*.md' '#docs/archive/**' '#docs/generated/**'",
    "docs:lint:root": "markdownlint-cli2 '*.md' '#CHANGELOG.md'",
    "docs:check-links": "bash scripts/check-doc-links.sh",
    "docs:check-external-links": "tsx scripts/check-external-links.ts",
    "docs:spell": "cspell 'docs/**/*.md' --no-progress",
    "docs:spell:all": "cspell 'docs/**/*.md' '*.md' --no-progress",
    "docs:freshness": "tsx scripts/check-doc-freshness.ts",
    "docs:freshness:json": "tsx scripts/check-doc-freshness.ts --json",
    "docs:freshness:ci": "tsx scripts/check-doc-freshness.ts --ci",
    "docs:metrics": "tsx scripts/generate-doc-metrics.ts",
    "docs:archive-index": "tsx scripts/generate-archive-index.ts",
    "docs:prose": "vale docs --glob='*.md' --ignore-syntax || echo 'ðŸ’¡ Install Vale: brew install vale (macOS) or see .vale/README.md'",
    "docs:prose:sync": "vale sync || echo 'ðŸ’¡ Vale not installed. See .vale/README.md for setup instructions'",
    "docs:analyze": "tsx scripts/analyze-docs-deep.ts",
    "docs:analyze:json": "tsx scripts/analyze-docs-deep.ts --json --output=docs-analysis.json",
    "docs:fix-dates": "tsx scripts/fix-frontmatter-dates.ts",
    "docs:fix-dates:dry": "tsx scripts/fix-frontmatter-dates.ts --dry-run",
    "docs:suggest-tags": "tsx scripts/suggest-tags.ts",
    "docs:find-todos": "tsx scripts/find-todos.ts",
    "docs:audit": "npm run docs:lint && npm run docs:spell && npm run docs:check-links && echo 'âœ… Documentation audit complete'",
    "docs:frontmatter": "tsx scripts/add-frontmatter.ts",
    "docs:frontmatter:dry": "tsx scripts/add-frontmatter.ts --dry-run",
    "docs:frontmatter:force": "tsx scripts/add-frontmatter.ts --force",
    "docs:frontmatter:check": "tsx scripts/check-frontmatter.ts docs/**/*.md",
    "docs:catalog": "tsx scripts/generate-doc-catalog.ts",
    "export-openapi": "tsx scripts/export-openapi.ts",
    "export-openapi:yaml": "tsx scripts/export-openapi.ts --format=yaml --output=docs/openapi.yaml",
    "inspect": "npx @modelcontextprotocol/inspector node dist/index.js",
    "inspect:cli": "npx @modelcontextprotocol/inspector node dist/cli.js --stdio",
    "schema:fetch": "tsx src/cli/schema-manager.ts fetch",
    "schema:compare": "tsx src/cli/schema-manager.ts compare",
    "schema:versions": "tsx src/cli/schema-manager.ts versions",
    "schema:clear-cache": "tsx src/cli/schema-manager.ts clear-cache",
    "schema:migration-report": "tsx src/cli/schema-manager.ts migration-report",
    "watch:all": "bash scripts/watch-all.sh"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "anthropic-mcp",
    "claude",
    "claude-desktop",
    "google-sheets",
    "gsheets",
    "google-workspace",
    "spreadsheet",
    "anthropic",
    "ai-tools",
    "oauth",
    "oauth2",
    "connector",
    "enterprise",
    "production-ready"
  ],
  "author": {
    "name": "Thomas Lee Cahill",
    "url": "https://github.com/khill1269"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.26.0",
    "@opentelemetry/auto-instrumentations-node": "^0.69.0",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.212.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.212.0",
    "@opentelemetry/resources": "^2.5.1",
    "@opentelemetry/sdk-node": "^0.212.0",
    "@opentelemetry/semantic-conventions": "^1.39.0",
    "compression": "1.8.1",
    "cors": "2.8.6",
    "dotenv": "17.2.4",
    "express": "5.2.1",
    "express-rate-limit": "8.2.1",
    "googleapis": "171.4.0",
    "helmet": "8.1.0",
    "jsonwebtoken": "9.0.3",
    "lru-cache": "11.2.5",
    "open": "11.0.0",
    "p-queue": "9.1.0",
    "prom-client": "15.1.3",
    "uuid": "13.0.0",
    "winston": "3.19.0",
    "zod": "4.3.6"
  },
  "optionalDependencies": {
    "keytar": "7.9.0",
    "redis": "5.10.0"
  },
  "devDependencies": {
    "@types/compression": "1.8.1",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.6",
    "@types/jsonwebtoken": "9.0.10",
    "@types/node": "22.19.9",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "ajv": "8.17.1",
    "ajv-formats": "3.0.1",
    "cspell": "9.6.4",
    "dependency-cruiser": "17.3.7",
    "eslint": "9.39.2",
    "eslint-plugin-boundaries": "5.4.0",
    "fast-check": "4.5.3",
    "husky": "9.1.7",
    "knip": "5.83.0",
    "lint-staged": "16.2.7",
    "markdownlint-cli2": "^0.21.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.8.1",
    "supertest": "7.2.2",
    "ts-prune": "0.10.3",
    "tsx": "4.21.0",
    "turbo": "2.8.3",
    "typedoc": "0.28.16",
    "typescript": "5.9.3",
    "vitepress": "1.6.4",
    "vitest": "4.0.18",
    "yaml": "2.8.2",
    "zod-to-json-schema": "3.25.1"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --cache --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist",
    "examples",
    "docs/guides",
    "assets",
    "server.json",
    "README.md",
    "LICENSE",
    "SECURITY.md",
    "CHANGELOG.md",
    "SKILL.md"
  ],
  "overrides": {
    "esbuild": "0.27.2"
  }
}
