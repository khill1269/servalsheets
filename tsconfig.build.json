{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo.build"
  },
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "**/*.test.ts",
    "**/*.spec.ts",
    "src/__tests__/**",
    "src/services/discovery-client.ts",
    "src/services/schema-cache.ts",
    "src/services/schema-validator.ts",
    "src/cli/schema-manager.ts",
    "src/utils/protocol-tracer.ts"
  ]
}
