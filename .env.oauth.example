# ServalSheets OAuth Configuration
# Copy this file to .env and fill in your credentials

# ============================================================================
# Google OAuth Credentials
# ============================================================================
# Get these from: https://console.cloud.google.com/apis/credentials
OAUTH_CLIENT_ID=your-client-id-here.apps.googleusercontent.com
OAUTH_CLIENT_SECRET=your-client-secret-here
OAUTH_REDIRECT_URI=http://localhost:3000/callback

# ============================================================================
# Server Configuration
# ============================================================================
HTTP_PORT=3000
NODE_ENV=development
LOG_LEVEL=info
LOG_FORMAT=pretty

# ============================================================================
# Session & Security
# ============================================================================
# Generate with: openssl rand -hex 32
SESSION_SECRET=generate-a-random-32-character-hex-string-here

# Comma-separated list of allowed redirect URIs
ALLOWED_REDIRECT_URIS=http://localhost:3000/callback

# ============================================================================
# Token Storage (Optional)
# ============================================================================
# Where to store encrypted tokens (default: ~/.servalsheets/tokens.encrypted)
# GOOGLE_TOKEN_STORE_PATH=~/.servalsheets/tokens.encrypted

# Encryption key for token store (default: uses SESSION_SECRET)
# GOOGLE_TOKEN_STORE_KEY=64-character-hex-string-for-aes-256

# ============================================================================
# Rate Limiting (Optional)
# ============================================================================
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS (Optional)
# ============================================================================
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000
