{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,  /* Disabled: incompatible with googleapis types */
    "noPropertyAccessFromIndexSignature": true,
    "incremental": true,
    "tsBuildInfoFile": ".tsbuildinfo",
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "src/__tests__",
    "src/services/discovery-client.ts",
    "src/services/schema-cache.ts",
    "src/services/schema-validator.ts",
    "src/cli/schema-manager.ts",
    "src/utils/google-api-inspector.ts",
    "src/utils/protocol-tracer.ts",
    "src/utils/request-replay.ts"
  ]
}
